.header
  .header-in
    .header-in__title
      %h1 Connected Park
      .header-in--subtitle
        %p オススメ公園を分かち合うオンラインプラットフォーム
    .header__list__right
      -if user_signed_in?
        .header__list__right__userName
          %p ユーザーネーム：
          = image_tag "prof.png", alt: "user-image"
          -# = image_tag {src: /@user.image class:"icon_image"}
          
          %p= current_user.name
          = link_to edit_user_path(current_user) do
            = icon('fas', 'cog', class: 'icon')
        .header__list__right__login
          = link_to "ログアウト", destroy_user_session_path	, method: :delete
      -else
        = link_to "新規登録", new_user_registration_path, class:"header__list__right__login"
        = link_to "ログイン", user_session_path, class:"header__list__right__login"
  %ul.header__nav
    %li.header__nav__toyota
      %a(href="#")豊田市
    %li.header__nav__nagoya
      %a(href="#")名古屋市
    %li.header__nav__anjyou
      %a(href="#")安城市
    %li.header__nav__nagakute
      %a(href="#")長久手市
    %li.header__nav__handa
      %a(href="#")半田市